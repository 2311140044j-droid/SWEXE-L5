<h2>プロフィール編集</h2>

<%= form_with model: @user, local: true do |f| %>
  <div>
    <%= f.label :name, "名前" %><br>
    <%= f.text_field :name %>
  </div>

  <div>
    <%= f.label :bio, "自己紹介" %><br>
    <%= f.text_area :bio, rows: 5 %>
  </div>

  <%= f.submit "更新" %>
<% end %>

<p><%= link_to "戻る", user_path(@user) %></p>
