<h1>プロフィール編集</h1>

<%= form_with(model: @user, local: true) do |f| %>
  <p><%= f.label :username, 'ユーザーID' %><br>
     <%= f.text_field :username %></p>

  <p><%= f.label :name, '表示名' %><br>
     <%= f.text_field :name %></p>

  <p><%= f.label :bio, 'プロフィール' %><br>
     <%= f.text_area :bio %></p>

  <p><%= f.label :password, 'パスワード（変更時のみ）' %><br>
     <%= f.password_field :password %></p>

  <p><%= f.label :password_confirmation, '確認' %><br>
     <%= f.password_field :password_confirmation %></p>

  <%= f.submit '更新', class: 'btn btn-primary' %>
<% end %>

<hr>

<%= link_to 'アカウントを削除する',
            user_path(@user),
            data: { turbo_method: :delete, turbo_confirm: '本当に削除しますか？' },
            class: 'btn btn-danger' %>
